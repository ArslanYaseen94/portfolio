  <rect width="800" height="600" fill="url(#bgGradStory)"/>
  
  <!-- Story/Book icon with sparkles -->
  <circle cx="350" cy="280" r="5" fill="#4ADEDE" opacity="0.6">
    <animate attributeName="opacity" values="0.6;1;0.6" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="450" cy="260" r="4" fill="#A78BFA" opacity="0.6">
