  <path d="M 400 280 L 400 360" stroke="#4ADEDE" stroke-width="2" opacity="0.3"/>
  <path d="M 320 320 L 380 318" stroke="#A78BFA" stroke-width="1.5" opacity="0.4"/>
  <path d="M 420 318 L 480 320" stroke="#A78BFA" stroke-width="1.5" opacity="0.4"/>
  <path d="M 320 340 L 380 338" stroke="#A78BFA" stroke-width="1.5" opacity="0.4"/>
  <path d="M 420 338 L 480 340" stroke="#A78BFA" stroke-width="1.5" opacity="0.4"/>
  
  <text x="400" y="450" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="url(#textGradStory)" text-anchor="middle">StoryNest</text>
  <text x="400" y="490" font-family="Arial, sans-serif" font-size="24" fill="#A78BFA" text-anchor="middle" opacity="0.8">AI Story Generator</text>
</svg>
